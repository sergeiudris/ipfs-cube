#!/bin/bash

repl(){
    clj -A:core:app:repl
}


main(){
  clojure -A:core:app
}


uberjar(){
  clojure -X:depstar uberjar \
    :aot true \
    :jar target/ipfs-find.jar \
    :aliases '[:core :app]' \
    :main-class ipfs-find.app.main
}

resources(){
  cd resources && \
  git clone https://github.com/sergeiudris/ipfs-find && \
  rm -rf .git && \
  cd ../
}

"$@"